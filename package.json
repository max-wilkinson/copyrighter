{
  "name": "copyrighter",
  "displayName": "Copyrighter",
  "description": "Automates the process of including your copyright and license in your code.",
  "license": "SEE LICENSE IN LICENSE",
  "keywords": [
    "copyright",
    "license",
    "intellectual property"
  ],
  "icon": "CopyrighterIcon.png",
  "galleryBanner": {
    "color": "#3C3B6E",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/max-wilkinson/copyrighter.git"
  },
  "publisher": "FordLabs",
  "preview": true,
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.addCopyright",
    "onLanguage:c",
    "onLanguage:cpp",
    "onLanguage:csharp",
    "onLanguage:css",
    "onLanguage:go",
    "onLanguage:java",
    "onLanguage:javascript",
    "onLanguage:objective-c",
    "onLanguage:rust",
    "onLanguage:scss",
    "onLanguage:swift",
    "onLanguage:sql",
    "onLanguage:systemverilog",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:verilog",
    "onLanguage:vue"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.addCopyright",
        "title": "Add Copyright"
      }
    ],
    "languages": [
      {
        "id": "systemverilog",
        "aliases": [
            "SystemVerilog",
            "systemverilog",
            "System Verilog",
            "Systemverilog"
        ],
        "extensions": [
            ".sv",
            ".svh"
        ]
      },
      {
        "id": "verilog",
        "aliases": [
            "Verilog",
            "verilog"
        ],
        "extensions": [
            ".v",
            ".vh"
        ]
    }
  ],
    "configuration": {
      "title": "Copyrighter",
      "properties": {
        "copyrighter.author": {
          "type": "string",
          "default": "",
          "description": "The author that holds the copyright."
        },
        "copyrighter.license": {
          "type": "string",
          "description": "Select a license header to include with your copyright. If no license is selected, then only the copyright will be added to files.",
          "enumDescriptions": [
            "Copyright without a license header",
            "Apache 2.0 License",
            "MIT License",
            "GPL 3.0 License"
          ],
          "enum": [
            "none",
            "Apache2",
            "MIT",
            "GPL3"
          ]
        },
        "copyrighter.note": {
          "type": "string",
          "default": "",
          "description": "An optional note that can appear at the end of the default copyright notice."
        },
        "copyrighter.newFilesOnly": {
          "type": "boolean",
          "default": false,
          "description": "Inject Copyright notice in new files only"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^10.12.21",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode": "^1.1.37",
    "vscode-test": "^0.4.3"
  }
}
